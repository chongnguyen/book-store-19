extends ../layouts/common
block container
  .profile
    h1.d-block Profile User
    a(href='/user/profile/avatar') Update Avatar
    -var src='https://www.kindpng.com/picc/m/24-248253_user-profile-default-image-png-clipart-png-download.png'
    img.w-25.d-block.m-auto(src=user.avatar || src  alt='avatar')
    form(method='POST' enctype="multipart/form-data")
      .form-group
        input.form-control-file(type='file' name='avatar')
      button.btn.btn-primary(type='submit') Upload